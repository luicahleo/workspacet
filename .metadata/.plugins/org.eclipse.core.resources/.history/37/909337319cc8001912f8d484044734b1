				int i = listaCategorias.size();
				i = 0;
				for (String cat : listaCategorias) {
					tablaCategorias[i] = cat;
					i++;
				}

				for (int j = 0; j < tablaCategorias.length; j++) {
					tablaCategorias[j] = "\"" + tablaCategorias[j] + "\"" + ",";
				}
			
				for (int x = 0; x < tablaCategorias.length; x++) {
					categorias = categorias.append(tablaCategorias[x]);
				}
				categorias.deleteCharAt(categorias.length()-1);
				System.out.println(categorias);

			}

			// preguntamos si listaCategorias es diferencte de vacio
			/*
			 * if (listaCategorias != null) { // vaciamos la List a array de string String[]
			 * categoriasString = new String[listaCategorias.size()]; for (int i = 0; i <
			 * categoriasString.length; i++) {
			 * 
			 * for (String categoriaIndice : listaCategorias) { categoriasString[i] =
			 * categoriaIndice; i++; } // recorreos el mensaje
			 * 
			 * for (int j = 0; j < categoriasString.length; j++) { if (j ==
			 * categoriasString.length - 1) { categoriasString[j] = "\"" +
			 * categoriasString[j] + "\""; } else { categoriasString[j] = "\"" +
			 * categoriasString[j] + "\"" + ","; }
			 * 
			 * }
			 * 
			 * // ya esta el armado, ahora lo pasamos todo a un solo string // String
			 * mensajeCategorias = Arrays.toString(categoriasString);
			 * //System.out.println(mensajeCategorias); // ahora le quitamos la ultima ','
			 * 
			 * // for (String string : categoriasString) { System.out.println(string); }
			 * 
			 * // System.out.println(s); // categoriasString[i] += "\"" + cat + "\"" + ",";
			 * 
			 * }
			 * 
			 * }
