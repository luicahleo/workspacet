			if (listaColores != null) {
				String[] coloresString = new String[listaColores.size()];

			}

		} else {
			// aqui tenemos que armar el error
			System.out.println("El parametro " + nombre_usu + "no es del tipo admin");
		}

		// La creación de JSON se puede simplificar usando librerías, pero aquí
		// lo hacemos directamente

		response.setContentType("application/json");
		response.setCharacterEncoding("UTF-8");
		response.getWriter().println("{ \"categorias\": \"" + categorias + "\", \"colores\": \""
